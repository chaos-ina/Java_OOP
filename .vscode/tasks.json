{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Java: Compile and Run (Package)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$javac"
            ],
            "windows": {
                "command": "powershell.exe",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}\\.vscode\\build-and-run.ps1",
                    "-relativeDir",
                    "${relativeFileDirname}",
                    "-fileBaseName",
                    "${fileBasenameNoExtension}"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "osx": {
                "command": "${workspaceFolder}/.vscode/build-and-run.sh",
                "args": [
                    "${relativeFileDirname}",
                    "${fileBasenameNoExtension}"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "linux": {
                "command": "${workspaceFolder}/.vscode/build-and-run.sh",
                "args": [
                    "${relativeFileDirname}",
                    "${fileBasenameNoExtension}"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        }
    ]
}