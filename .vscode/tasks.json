{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Java: Compile and Run (Package)",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\.vscode\\build-and-run.ps1",
                "-relativeDir",
                "${relativeFileDirname}",
                "-fileBaseName",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$javac"
            ]
        }
    ]
}